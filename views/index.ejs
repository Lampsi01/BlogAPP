 <!DOCTYPE html>
 <html lang="en">
 <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
 </head>
<%- include("header.ejs") %>
 

 <style>
@import url('https://fonts.googleapis.com/css2?family=Yantramanav:wght@100;300;400;500;700;900&display=swap') ; 

    .publishForm{
        display: flex;
        justify-content: center;
        padding: 10% 0 ;
        
    }
    fieldset{
        width: 700px;
        padding: 5% ;
        border: solid ;
        border-radius: 7px;
        
    }
    legend{
        font-size: 30px;
        font-weight: bold;
        font-family: Yantramanav;

    }
    #title {
        padding: 10px 0;
        /* border-radius: 5px;  */
        border: 0.5px solid black;
        width: 100%;
        
    }
    #text { 
        height: 150px;
         
    }
    textarea{
        width: 100%;

        height: 10vh;
        resize: none;
    }
    label{
        font-family: Yantramanav;

    }
    .textarea{
        display: flex;
        flex-direction: column;
        
    }

    input[type="submit"] {
  background-color: #5cb85c; /* Green color */
  color: #fff; /* White text color */
  padding: 10px 20px; /* Padding for the button */
  margin: 20px 0 ;
  border: none; /* Remove default button border */
  border-radius: 5px; /* Rounded corners */
  cursor: pointer; /* Show pointer cursor on hover */

}

input[type="submit"]:hover {
  background-color: #4cae4c; /* Darker shade of green on hover */
}
 </style>
 <body>
    <div class="publishForm">  
        <fieldset> 
            <legend> publish </legend>

            <form action="/news" method="post">
                <label for="title">Title:</label> <br>
                <input type="text" name="title" id="title" maxlength="30">
                <br>
                <!-- <label for="img" >choose image : </label>
                <input type="file" id="img" accept="image/*" name="image"> -->

                <br>
                <div class="textarea"  >   
                    <label for="description">text :  </label>
                
                    <textarea name="description" id="description"   maxlength="130"></textarea>
                </div>
                <input type="submit" value="Submit">
                
            </form>
        </fieldset>
    </div>

    <%- include("footer.ejs") %>
 </body>
 </html>